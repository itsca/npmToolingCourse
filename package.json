{
  "name": "npmTooling",
  "version": "0.0.1",
  "description": "Assets for my Tooling with NPM Scripts course at Lynda.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/itsca/npmToolingCourse.git"
  },
  "author": "Javier Escalante",
  "babel": {
  	"presets": [
  		"es2015"
  	]
  },
  "scripts": {
    "serve-dev": "live-server builds/development",
    "prod-setup": "mkdirp builds/production/js",
    "start": "npm run serve-dev",
    "prestart": "npm run prod-setup",
    "sass-dev": "node-sass --watch components/scss --output-style expanded --source-map true components/scss/style.scss --output builds/development/css",
    "js-transform" : "babel components/js/**/*.js --watch --out-file builds/development/js/script.js --source-maps"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0"
  }
}
